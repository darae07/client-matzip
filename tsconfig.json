{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": ["utils/*"],
      "@/utils": ["utils"],
      "@/components/*": ["components/*"],
      "@/components": ["components"],
      "@/constants/*": ["constants/*"],
      "@/constants": ["constants"],
      "@/store/*": ["store/*"],
      "@/store": ["store"],
      "@/api/*": ["api/*"],
      "@/api": ["api"],
      "@/type/*": ["type/*"],
      "@/type": ["type/index.ts"],
      "@/public/*": ["public/*"],
      "@/queries": ["queries/index.ts"],
      "@/queries/*": ["queries/*"]
    },
    "types": ["kakao.maps.d.ts"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "__tests__/index.test.jsx"
  ],
  "exclude": ["node_modules"]
}
