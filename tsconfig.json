{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/utils/*": [
        "utils/*"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/constants/*": [
        "constants/*"
      ],
      "@/store/*": [
        "store/*"
      ],
      "@/api/*": [
        "api/*"
      ],
      "@/type/*": [
        "type/*"
      ],
      "@/components": [
        "components"
      ],
      "@/constants": [
        "constants"
      ],
      "@/store": [
        "store"
      ],
      "@/api": [
        "api"
      ],
      "@/type": [
        "type/index.ts"
      ]
    },
    "types": [
      "kakao.maps.d.ts"
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "__tests__/index.test.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}